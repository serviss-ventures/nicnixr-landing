{
  "expo": {
    "name": "NixR",
    "slug": "nixr",
    "version": "1.0.0",
    "scheme": "nixr",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nixr.app",
      "infoPlist": {
        "NSUserNotificationsUsageDescription": "This app uses notifications to remind you about your recovery milestones, provide daily motivation, and notify you of community activity."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.nixr.app",
      "permissions": ["NOTIFICATIONS"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#8B5CF6",
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} new notifications",
      "iosDisplayInForeground": true
    },

    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
